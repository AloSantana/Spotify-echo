# EchoTune AI - Environment Configuration
# Copy to .env and configure values

# ============================================================================
# REQUIRED - Application will not start without these
# ============================================================================
JWT_SECRET=your-secret-here-change-in-production
MONGODB_URI=mongodb://localhost:27017/echotune_ai

# ============================================================================  
# RECOMMENDED - Important for production deployment
# ============================================================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
REDIS_URL=redis://localhost:6379
SESSION_SECRET=your-session-secret-here-change-in-production

# ============================================================================
# DEVELOPMENT - Enable mock providers for testing
# ============================================================================
ENABLE_MOCK_PROVIDER=true

# ============================================================================
# FEATURE FLAGS - Control application behavior  
# ============================================================================
DISABLE_REALTIME=false
ENABLE_TRACING=true
ENABLE_AGENTOPS=false

# ============================================================================
# SPOTIFY INTEGRATION - Required for music features
# ============================================================================
# Get your credentials from https://developer.spotify.com/dashboard
# 1. Create a new app or select an existing one
# 2. Copy the Client ID and Client Secret
# 3. Add the redirect URI to "Redirect URIs" section: http://localhost:3000/auth/callback
# 4. Save changes in Spotify Dashboard
# 
# IMPORTANT: The SPOTIFY_REDIRECT_URI must EXACTLY match what you registered in Spotify Dashboard
# Common formats:
#   - Development: http://localhost:3000/auth/callback
#   - Production: https://yourdomain.com/auth/callback
# 
# See docs/SPOTIFY_OAUTH_SETUP.md for detailed configuration guide
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================================================
# AI PROVIDERS - Enable advanced AI features when provided
# ============================================================================
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
XAI_API_KEY=
OPENROUTER_API_KEY=

# AI Provider Configuration
LLM_PROVIDER=auto
GEMINI_MODEL=gemini-2.5-pro
GEMINI_MODEL_FALLBACK=gemini-1.5-flash


GEMINI_SAFETY_MODE=BLOCK_MEDIUM_AND_ABOVE
GEMINI_RESPONSE_FORMAT=text
GEMINI_FUNCTION_CALLING_ENABLED=false
GEMINI_CODE_ASSIST_ENABLED=false
GEMINI_CACHE_TTL_MS=600000

ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPUS_EXTENDED_THINKING_DEFAULT_BUDGET=10000
OPUS_MAX_THINKING_BUDGET=32000
OPUS_FUNCTION_CALLING_ENABLED=false

# Multi-provider routing
AI_ROUTING_STRATEGY=balanced
AI_FALLBACK_ENABLED=true
AI_COST_OPTIMIZATION=true
AI_DISABLE_MOCK_IN_PROD=true
AI_ALLOW_MOCK_IN_PROD=false

# ============================================================================
# DEPLOYMENT & HOSTING
# ============================================================================
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000

# ============================================================================
# GITHUB INTEGRATION - Optional for automation features
# ============================================================================
GITHUB_PAT=
GITHUB_API_KEY=
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_OWNER=your-github-username
GITHUB_REPO=Spotify-echo

# ============================================================================
# BROWSER AUTOMATION & TESTING - Optional
# ============================================================================
BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=
E2B_API_KEY=

# ============================================================================
# DEVELOPMENT SERVICES - Optional  
# ============================================================================
# (n8n automation removed - not used in this application)

# ============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================================================
DIGITALOCEAN_API_TOKEN=

# ============================================================================
# PERFORMANCE & MONITORING - Optional configuration
# ============================================================================
# LOG_LEVEL controls verbosity of application logs
# - trace: Most verbose, includes OpenTelemetry span details, all debug info, and verbose service logs
# - debug: Detailed debug information including APM alerts, BI insights, and analytics patterns
# - info: Standard informational messages (recommended for development)
# - warn: Warning messages only
# - error: Error messages only
LOG_LEVEL=info
COMPRESSION=true
ENABLE_ANALYTICS_DASHBOARD=false
ENABLE_DEMO_ROUTES=0
CACHE_TTL=3600
RATE_LIMIT_MAX=100
SSL_ENABLED=false

# Advanced Observability & Analytics - Control Phase 9 services
# These services provide comprehensive monitoring, business intelligence, and real-time analytics
# Set to false to disable verbose logging from these services (respects LOG_LEVEL setting)
ENABLE_APM=true
ENABLE_BI=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_ADVANCED_ALERTING=true

# ============================================================================
# OBSERVABILITY - Optional telemetry and monitoring
# ============================================================================
AGENTOPS_API_KEY=

# ============================================================================
# DEVELOPMENT ONLY - Not needed in production
# ============================================================================
BROWSERBASE_API_KEY=