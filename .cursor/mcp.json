{
  "$schema": "https://modelcontextprotocol.io/schema/cursor-mcp.json",
  "mcpServers": {
    "echotune-perplexity-enhanced": {
      "command": "node",
      "args": [
        "./mcp-servers/perplexity-mcp/perplexity-mcp-server.js"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "PERPLEXITY_MODEL": "llama-3.1-sonar-large-128k-online",
        "PERPLEXITY_MAX_LATENCY_MS": "2000",
        "PERPLEXITY_MAX_MEMORY_MB": "512",
        "PERPLEXITY_COST_BUDGET_USD": "1.00",
        "DEBUG": "false",
        "ENABLE_STREAMING": "true",
        "RATE_LIMIT_RPM": "100"
      },
      "description": "Enhanced Perplexity integration with improved performance and cost management"
    },
    "echotune-filesystem-optimized": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "./src",
        "./scripts",
        "./mcp-servers",
        "./tests",
        "./.cursor"
      ],
      "env": {
        "FILE_WATCH_ENABLED": "true",
        "MAX_FILE_SIZE_MB": "10",
        "EXCLUDED_PATTERNS": "node_modules,*.log,*.tmp,.git"
      },
      "description": "Optimized filesystem server with enhanced file watching and filtering"
    },
    "package-manager-enhanced": {
      "command": "node",
      "args": [
        "./mcp-servers/package-management/package-version-mcp.js"
      ],
      "env": {
        "AUTO_UPDATE_CHECK": "true",
        "SECURITY_AUDIT": "true",
        "DEPENDENCY_ANALYSIS": "true"
      },
      "description": "Enhanced package management with security auditing and dependency analysis"
    },
    "analytics-advanced": {
      "command": "node",
      "args": [
        "./mcp-servers/analytics-server/analytics-mcp.js"
      ],
      "env": {
        "METRICS_COLLECTION": "true",
        "PERFORMANCE_MONITORING": "true",
        "ERROR_TRACKING": "true",
        "REAL_TIME_DASHBOARD": "true"
      },
      "description": "Advanced analytics with real-time monitoring and error tracking"
    },
    "testing-automation-pro": {
      "command": "node",
      "args": [
        "./mcp-servers/testing-automation/testing-automation-mcp.js"
      ],
      "env": {
        "PARALLEL_EXECUTION": "true",
        "COVERAGE_THRESHOLD": "85",
        "AUTO_RETRY": "true",
        "INTEGRATION_TESTING": "true"
      },
      "description": "Professional testing automation with parallel execution and enhanced coverage"
    },
    "brave-search-enhanced": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}",
        "SEARCH_RESULTS_LIMIT": "20",
        "CONTENT_FILTERING": "moderate",
        "CACHE_RESULTS": "true"
      },
      "description": "Enhanced Brave search with result caching and content filtering"
    },
    "browserbase-pro": {
      "command": "node",
      "args": [
        "./mcp-servers/browserbase/browserbase-mcp.js"
      ],
      "env": {
        "BROWSERBASE_API_KEY": "${BROWSERBASE_API_KEY}",
        "BROWSERBASE_PROJECT_ID": "${BROWSERBASE_PROJECT_ID}",
        "BROWSERBASE_SESSION_ID": "${BROWSERBASE_SESSION_ID}",
        "SESSION_DURATION": "3600",
        "PARALLEL_SESSIONS": "5",
        "AUTO_CLEANUP": "true"
      },
      "description": "Professional browserbase integration with session management and cleanup"
    },
    "memory-enhanced": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_DB_PATH": ".cursor/memory.sqlite",
        "MEMORY_MAX_MB": "128",
        "AUTO_COMPRESSION": "true",
        "BACKUP_ENABLED": "true",
        "RETENTION_DAYS": "30"
      },
      "description": "Enhanced memory server with compression and backup capabilities"
    },
    "perplexity-research-pro": {
      "command": "node",
      "args": [
        "./mcp-servers/perplexity-ask-server/perplexity-ask-mcp.js"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "DEBUG": "false",
        "RESEARCH_DEPTH": "comprehensive",
        "FACT_CHECKING": "true",
        "CITATION_FORMAT": "academic",
        "MULTI_SOURCE_VALIDATION": "true"
      },
      "description": "Professional research with comprehensive fact-checking and multi-source validation"
    },
    "ai-integration-advanced": {
      "command": "node",
      "args": [
        "./src/api/ai-integration/grok4-mcp-server.js"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "XAI_API_KEY": "${XAI_API_KEY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "DEBUG": "false",
        "MODEL_ROUTING": "intelligent",
        "COST_OPTIMIZATION": "true",
        "PERFORMANCE_MONITORING": "true"
      },
      "description": "Advanced AI integration with intelligent model routing and cost optimization"
    },
    "browser-automation-comet": {
      "command": "node",
      "args": [
        "./mcp-servers/browser-automation/browser-automation-mcp.js"
      ],
      "env": {
        "DEBUG": "false",
        "BROWSER_TYPE": "comet",
        "HEADLESS_MODE": "false",
        "SCREENSHOT_ON_ERROR": "true",
        "PERFORMANCE_PROFILING": "true",
        "ACCESSIBILITY_TESTING": "true",
        "PARALLEL_TESTS": "5"
      },
      "description": "Advanced browser automation with Comet integration and comprehensive testing"
    },
    "github-integration-pro": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}",
        "AUTO_PR_CREATION": "true",
        "CODE_REVIEW_AUTOMATION": "true",
        "ISSUE_TRACKING": "true",
        "WORKFLOW_AUTOMATION": "true"
      },
      "description": "Professional GitHub integration with automated PR management and workflow automation"
    },
    "music-research-advanced": {
      "command": "node",
      "args": [
        "./scripts/music-research-automation.js"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "SPOTIFY_CLIENT_ID": "${SPOTIFY_CLIENT_ID}",
        "SPOTIFY_CLIENT_SECRET": "${SPOTIFY_CLIENT_SECRET}",
        "DEBUG": "false",
        "TREND_ANALYSIS": "true",
        "GENRE_CLASSIFICATION": "true",
        "ARTIST_DISCOVERY": "true",
        "RECOMMENDATION_ENGINE": "true"
      },
      "description": "Advanced music research with trend analysis and intelligent recommendation engine"
    },
    "comet-browser-testing": {
      "command": "node",
      "args": [
        "./scripts/comet-browser-automation.js"
      ],
      "env": {
        "COMET_HEADLESS": "false",
        "COMET_RECORDING": "true",
        "PERFORMANCE_MONITORING": "true",
        "A11Y_TESTING": "true",
        "VISUAL_REGRESSION": "true",
        "CROSS_BROWSER": "true"
      },
      "description": "Specialized Comet browser testing with comprehensive validation and monitoring"
    },
    "development-accelerator": {
      "command": "node",
      "args": [
        "./scripts/development-accelerator.js"
      ],
      "env": {
        "AUTO_CODE_GENERATION": "true",
        "PATTERN_DETECTION": "true",
        "REFACTORING_SUGGESTIONS": "true",
        "PERFORMANCE_OPTIMIZATION": "true",
        "SECURITY_ANALYSIS": "true"
      },
      "description": "Development accelerator with AI-powered code generation and optimization"
    }
  }
}