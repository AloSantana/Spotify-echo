# NPM Configuration for EchoTune AI
# Ensures consistent behavior across environments

# Use exact versions for lockfile generation
save-exact=false

# Strict peer dependencies handling (warn but don't fail)
legacy-peer-deps=false
strict-peer-deps=false

# Fail fast on engine mismatch
engine-strict=true

# Fund messages disabled for cleaner output
fund=false

# Audit configuration
audit-level=moderate

# Progress indicators
progress=true
loglevel=notice

# Optional dependencies handling (default behavior)
# Use --omit=optional or --include=optional flags instead

# Lockfile version (v2 format for npm 7+)
lockfile-version=2
