# NPM Configuration for EchoTune AI
# Ensures consistent behavior across environments
# Optimized for Ubuntu, Windows 11 WSL, and Linux

# Use exact versions for lockfile generation
save-exact=false

# Strict peer dependencies handling (warn but don't fail)
legacy-peer-deps=false
strict-peer-deps=false

# Fail fast on engine mismatch
engine-strict=true

# Fund messages disabled for cleaner output
fund=false

# Audit configuration
audit-level=moderate

# Progress indicators
progress=true
loglevel=notice

# Optional dependencies handling (default behavior)
# Use --omit=optional or --include=optional flags instead

# Lockfile version (v2 format for npm 7+)
lockfile-version=2

# Platform-specific optimizations
# Disable update notifier for cleaner CI/WSL experience
update-notifier=false

# Script shell configuration
# Windows users: Ensure Git Bash or WSL is used for scripts
# WSL/Linux users: Uses default shell (bash/sh)
# Uncomment below to force specific shell on Windows:
# script-shell=/bin/bash

# Symlink handling for Windows/WSL
# Preserves symbolic links correctly across platforms
prefer-offline=false
prefer-online=false
