      "priority": "highest",
      "change_frequency": "regular",
      "coding_agent_focus": "primary"
    },
    "platform": {
      "description": "Foundational services and infrastructure abstractions", 
      "priority": "high",
      "change_frequency": "moderate", 
      "coding_agent_focus": "secondary"
    },
    "intelligence": {
      "description": "AI/ML algorithms and recommendation logic",
      "priority": "high",
      "change_frequency": "regular",
      "coding_agent_focus": "primary"
    },
    "presentation": {
      "description": "User interfaces and API presentation layer",
      "priority": "medium",
      "change_frequency": "regular",
      "coding_agent_focus": "secondary"
    },
    "automation": {
      "description": "Development tools, infrastructure, and process automation",
      "priority": "low",
      "change_frequency": "low",
      "coding_agent_focus": "avoid"
    }
