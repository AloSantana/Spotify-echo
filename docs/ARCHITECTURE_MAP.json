  "coding_agent_guidelines": {
    "primary_focus": ["src/orchestration/", "src/recommendation/", "src/chat/", "src/spotify/"],
    "secondary_focus": ["src/database/", "src/cache/", "src/api/"],
    "avoid_modification": ["src/infra/", "mcp-server/", "scripts/automation/"],
    "safe_to_create": ["src/orchestration/", "src/recommendation/strategies/", "src/cache/", "src/chat/context/"],
    "requires_approval": ["src/infra/", "mcp-server/enhanced-*", ".github/workflows/"]
  }
