{
  "$schema": "https://modelcontextprotocol.io/schema/mcp.json",
  "description": "MCP server configuration for GitHub Copilot - EchoTune AI (Spotify-echo). Includes servers for filesystem, git, github, databases (MongoDB, PostgreSQL, SQLite), web automation (Playwright), search, and reasoning capabilities.",
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "tools": ["read_file", "read_multiple_files", "write_file", "edit_file", "create_directory", "list_directory", "move_file", "search_files", "get_file_info", "list_allowed_directories"]
    },
    "git": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "--repository", "."],
      "tools": ["git_status", "git_diff", "git_commit", "git_add", "git_reset", "git_log", "git_show", "git_branch", "git_checkout", "git_clone"]
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@github/mcp-server"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "tools": ["get_file_contents", "get_issue", "get_pull_request", "list_issues", "list_pull_requests", "search_code", "search_issues", "search_repositories", "create_issue", "create_pull_request", "update_issue", "create_or_update_file", "push_files", "create_branch", "list_commits", "list_branches", "fork_repository", "merge_pull_request", "get_pull_request_files", "create_pull_request_review", "list_workflow_runs", "list_workflow_jobs"]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "tools": ["create_entities", "create_relations", "add_observations", "delete_entities", "delete_observations", "delete_relations", "read_graph", "search_nodes", "open_nodes"]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "tools": ["sequentialthinking"]
    },
    "fetch": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "tools": ["fetch"]
    },
    "sqlite": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "--db-path", "data/echotune.db"],
      "tools": ["read_query", "write_query", "create_table", "list_tables", "describe_table", "append_insight"]
    },
    "mongodb": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@mongodb-js/mongodb-mcp-server"],
      "env": {
        "MDB_MCP_CONNECTION_STRING": "${MONGODB_URI}"
      }
    },
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_URL}"
      }
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "docker": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-server-docker"],
      "tools": ["list_containers", "create_container", "run_container", "stop_container", "remove_container", "list_images", "pull_image", "build_image", "run_exec"]
    },
    "time": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-time"]
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "tools": ["browser_navigate", "browser_screenshot", "browser_click", "browser_type", "browser_fill", "browser_select_option", "browser_snapshot", "browser_evaluate", "browser_wait_for", "browser_close", "browser_resize", "browser_hover", "browser_drag", "browser_press_key", "browser_handle_dialog", "browser_file_upload", "browser_network_requests", "browser_console_messages", "browser_tabs"]
    }
  }
}
