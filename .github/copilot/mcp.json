{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Step-by-step reasoning for complex problems"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory across sessions"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${{ secrets.COPILOT_MCP_GITHUB_TOKEN }}"
      },
      "description": "GitHub API - issues, PRs, repos"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "description": "Git operations - log, diff, blame"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "File system operations"
    },
    "gemini": {
      "command": "npx",
      "args": ["-y", "gemini-mcp-tool"],
      "env": {
        "GOOGLE_GEMINI_API_KEY": "${{ secrets.COPILOT_MCP_GEMINI_API_KEY }}"
      },
      "description": "Google Gemini AI via API - text generation, chat, code analysis"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "description": "Cross-browser automation (Microsoft official)"
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "description": "Chrome automation & screenshots"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${{ secrets.COPILOT_MCP_BRAVE_API }}"
      },
      "description": "Web search (2000 free queries/month)"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "HTTP requests and content retrieval"
    }
  }
}