{
  "name": "spotify-echo",
  "version": "1.0.0",
  "description": "EchoTune AI - Sophisticated music recommendation system with AI-powered discovery",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "start:ci": "cross-env NODE_ENV=production PORT=${PORT:-3000} node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test tests/e2e/smoke.spec.js --project=desktop-chromium",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:installation": "node scripts/validate-installation.js",
    "test:mcp-servers": "node scripts/validate-mcp-servers.js",
    "test:api": "node scripts/run-api-validation.js",
    "test:api:discover": "node scripts/discover-api-endpoints.js",
    "test:api:comprehensive": "node scripts/comprehensive-api-tests.js",
    "test:api:report": "node scripts/generate-api-report.js",
    "test:api:full": "npm run test:api:discover && npm run test:api:comprehensive && npm run test:api:report",
    "validate:all": "npm run test:comprehensive",
    "validate:env": "node scripts/validate-env.js",
    "auth:url": "node scripts/auth-helpers.js url",
    "auth:exchange": "node scripts/auth-helpers.js exchange",
    "auth:test-credentials": "node scripts/auth-helpers.js test-credentials",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:scan": "node scripts/security-scan.js",
    "playwright:install": "playwright install --with-deps",
    "wait:health": "wait-on http://localhost:${PORT:-3000}/healthz",
    "e2e:with:server": "start-server-and-test \"npm run start:ci\" http://localhost:${PORT:-3000}/healthz \"npm run test:e2e\"",
    "qa:full": "node scripts/comprehensive-qa-automation.js",
    "qa:docker": "node scripts/docker-qa-automation.js",
    "qa:npm": "npm install && npm run test:comprehensive",
    "qa:all": "node scripts/master-qa-orchestrator.js",
    "qa:master": "node scripts/master-qa-orchestrator.js",
    "qa:validate": "node scripts/validate-qa-setup.js",
    "ci:status": "node scripts/generate-ci-status-report.js",
    "build": "node -e \"console.log('Noop build (server-only)')\"",
    "mcp:enhanced-validation": "node scripts/enhanced-mcp-validation-pipeline.js"
  },
  "keywords": [
    "music",
    "spotify",
    "ai",
    "recommendations",
    "analytics",
    "machine-learning",
    "conversational-ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.20.0",
    "redis": "^4.6.0",
    "socket.io": "^4.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^11.0.0",
    "start-server-and-test": "^2.0.3",
    "wait-on": "^7.2.0"
  }
}
