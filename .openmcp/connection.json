{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {},
      "disabled": false,
      "autostart": true,
      "connection": {
        "host": "localhost",
        "port": 3001,
        "healthEndpoint": "/health"
      }
    },
    "mongodb": {
      "command": "npx",
      "args": [
        "-y",
        "mongodb-mcp-server"
      ],
      "env": {
        "MONGODB_URI": "${MONGODB_URI}",
        "MONGODB_DATABASE": "${MONGODB_DATABASE:-spotify-echo}"
      },
      "disabled": false,
      "autostart": true,
      "connection": {
        "host": "localhost",
        "port": 3002,
        "healthEndpoint": "/health"
      }
    },
    "spotify": {
      "command": "node",
      "args": [
        "scripts/mcp/spotify-mcp-server.js"
      ],
      "env": {
        "SPOTIFY_CLIENT_ID": "${SPOTIFY_CLIENT_ID}",
        "SPOTIFY_CLIENT_SECRET": "${SPOTIFY_CLIENT_SECRET}",
        "SPOTIFY_REDIRECT_URI": "${SPOTIFY_REDIRECT_URI}"
      },
      "disabled": false,
      "autostart": true,
      "connection": {
        "host": "localhost",
        "port": 3003,
        "healthEndpoint": "/health"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "--db-path",
        "./data/spotify.db"
      ],
      "env": {},
      "disabled": false,
      "autostart": true,
      "connection": {
        "host": "localhost",
        "port": 3004,
        "healthEndpoint": "/health"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-playwright"
      ],
      "env": {},
      "disabled": false,
      "autostart": true,
      "connection": {
        "host": "localhost",
        "port": 3005,
        "healthEndpoint": "/health"
      }
    },
    "docker": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-docker"
      ],
      "env": {},
      "disabled": true,
      "autostart": false,
      "connection": {
        "host": "localhost",
        "port": 3006,
        "healthEndpoint": "/health"
      }
    },
    "time": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-time"
      ],
      "env": {},
      "disabled": true,
      "autostart": false,
      "connection": {
        "host": "localhost",
        "port": 3007,
        "healthEndpoint": "/health"
      }
    },
    "google-drive": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-google-drive"
      ],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}"
      },
      "disabled": true,
      "autostart": false,
      "connection": {
        "host": "localhost",
        "port": 3008,
        "healthEndpoint": "/health"
      }
    }
  }
}
