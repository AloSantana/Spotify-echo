{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": ["mcp-servers/filesystem/index.js"],
      "env": {
        "WORKSPACE_ROOT": "."
      },
      "capabilities": ["file-operations", "directory-management"],
      "category": "core",
      "required": true,
      "priority": 1,
      "plannedUsage": [
        "File operations and directory management",
        "Source code reading and writing",
        "Configuration file management",
        "Log file access and analysis"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3010/health",
        "timeout": 5000
      }
    },
    "memory": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-memory"],
      "capabilities": ["context-storage", "session-management"],
      "category": "core",
      "required": true,
      "priority": 1,
      "plannedUsage": [
        "Context preservation across sessions",
        "User session state management",
        "Conversation history storage",
        "Knowledge base maintenance"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3013/health",
        "timeout": 5000
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sequential-thinking"],
      "capabilities": ["structured-reasoning", "problem-solving"],
      "category": "core",
      "required": true,
      "priority": 1,
      "plannedUsage": [
        "Complex problem decomposition",
        "Step-by-step reasoning for PR reviews",
        "Decision tree analysis for code changes",
        "Structured problem solving in coding agent workflows"
      ],
      "healthCheck": {
        "command": "node -e \"console.log('sequential-thinking available')\"",
        "timeout": 3000
      }
    },
    "git": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git", "--repository", "."],
      "capabilities": ["version-control", "branch-management", "commit-operations"],
      "category": "core",
      "required": true,
      "priority": 1,
      "plannedUsage": [
        "Git operations and version control",
        "Branch management and merging in PR workflows",
        "Commit history analysis for coding agent",
        "Repository status checking for CI/CD"
      ],
      "healthCheck": {
        "command": "git --version",
        "timeout": 3000
      }
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-sqlite",
        "--db-path",
        "./data/coding-agent.db"
      ],
      "capabilities": ["database-operations", "query-execution", "data-persistence"],
      "category": "extended",
      "required": false,
      "priority": 2,
      "plannedUsage": [
        "Store coding agent session data and PR analysis",
        "Cache GitHub API responses to reduce rate limiting",
        "Track PR review history and decisions",
        "Maintain coding agent knowledge base"
      ],
      "healthCheck": {
        "command": "node -e \"const db = require('better-sqlite3')('./data/coding-agent.db'); db.close();\"",
        "timeout": 3000
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-playwright"],
      "capabilities": ["browser-automation", "ui-testing", "screenshot-capture"],
      "category": "extended",
      "required": false,
      "priority": 2,
      "plannedUsage": [
        "Automated UI testing in PR validation workflows",
        "Screenshot capture for visual regression testing",
        "Browser-based integration tests for coding agent",
        "Automated testing of deployed PR previews"
      ],
      "healthCheck": {
        "command": "npx playwright --version",
        "timeout": 5000
      }
    },
    "github": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "capabilities": ["github-api", "pr-operations", "issue-management"],
      "category": "extended",
      "required": false,
      "priority": 2,
      "plannedUsage": [
        "GitHub API operations for coding agent",
        "Automated PR creation and updates",
        "Issue tracking and management",
        "Repository insights and analytics"
      ],
      "healthCheck": {
        "command": "node -e \"console.log(process.env.GITHUB_TOKEN ? 'GitHub token configured' : 'Missing GITHUB_TOKEN')\"",
        "timeout": 3000
      }
    }
  },
  "orchestrator": {
    "enabled": true,
    "port": 3002,
    "healthCheckInterval": 30000,
    "retryAttempts": 3,
    "retryDelay": 5000,
    "startupTimeout": 60000,
    "gracefulShutdownTimeout": 30000
  },
  "monitoring": {
    "enabled": true,
    "metricsPort": 3003,
    "alerting": {
      "enabled": true,
      "thresholds": {
        "responseTime": 5000,
        "errorRate": 0.05,
        "uptime": 0.99
      }
    },
    "logging": {
      "level": "info",
      "file": "mcp-startup.log",
      "rotation": {
        "enabled": true,
        "maxSize": "100mb",
        "maxFiles": 10
      }
    }
  }
}
