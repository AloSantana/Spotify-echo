  },
  "orchestrator": {
    "enabled": true,
    "port": 3002,
    "healthCheckInterval": 30000,
    "retryAttempts": 3,
    "retryDelay": 5000,
    "startupTimeout": 60000,
    "gracefulShutdownTimeout": 30000
  },
  "monitoring": {
    "enabled": true,
    "metricsPort": 3003,
    "alerting": {
      "enabled": true,
      "thresholds": {
        "responseTime": 5000,
        "errorRate": 0.05,
        "uptime": 0.99
      }
    },
    "logging": {
      "level": "info",
      "file": "mcp-startup.log",
      "rotation": {
        "enabled": true,
        "maxSize": "100mb",
        "maxFiles": 10
      }
    }
  },
  "security": {
    "validateSSL": true,
    "allowSelfSigned": false,
    "tokenRotation": {
      "enabled": true,
      "interval": "24h"
    },
    "accessControl": {
      "enabled": true,
      "allowedOrigins": ["localhost", "127.0.0.1"],
      "requireAuth": false
    }
  },
  "performance": {
    "concurrency": {
      "maxConcurrentRequests": 100,
      "maxQueueSize": 500
    },
    "caching": {
      "enabled": true,
      "ttl": 300,
      "maxSize": "100mb"
    },
    "rateLimit": {
      "enabled": true,
      "requests": 1000,
      "window": "15m"
    }
  },
  "development": {
    "autoRestart": true,
    "hotReload": false,
    "debugMode": false,
    "mockServices": false,
    "testMode": false
  }
}