{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": ["mcp-servers/filesystem/index.js"],
      "env": {
        "WORKSPACE_ROOT": "."
      },
      "capabilities": ["file-operations", "directory-management"],
      "category": "core",
      "required": true,
      "priority": 1,
      "plannedUsage": [
        "File operations and directory management",
        "Source code reading and writing",
        "Configuration file management",
        "Log file access and analysis"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3010/health",
        "timeout": 5000
      }
    },
    "git": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git", "--repository", "."],
      "capabilities": ["version-control", "branch-management", "commit-operations"],
      "category": "core",
      "required": true,
      "priority": 1,
      "plannedUsage": [
        "Git operations and version control",
        "Branch management and merging",
        "Commit history analysis",
        "Repository status checking"
      ],
      "healthCheck": {
        "command": "git --version",
        "timeout": 3000
      }
    },
    "memory": {
      "command": "node",
      "args": ["mcp-servers/memory/index.js"],
      "capabilities": ["context-storage", "session-management"],
      "category": "core",
      "required": true,
      "priority": 2,
      "plannedUsage": [
        "Context preservation across sessions",
        "User session state management",
        "Conversation history storage",
        "Knowledge base maintenance"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3013/health",
        "timeout": 5000
      }
    },
    "sqlite": {
      "command": "node",
      "args": ["mcp-servers/sqlite/index.js"],
      "env": {
        "DB_PATH": "./data/echotune.db"
      },
      "capabilities": ["database-operations", "data-storage"],
      "category": "core",
      "required": true,
      "priority": 2,
      "plannedUsage": [
        "Local data storage and caching",
        "User preferences storage",
        "Listening history caching",
        "Recommendation data storage"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3014/health",
        "timeout": 5000
      }
    },
    "analytics": {
