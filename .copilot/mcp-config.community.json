{
  "mcpServers": {
    "sqlite": {
      "command": "node",
      "args": ["mcp-servers/sqlite/index.js"],
      "env": {
        "DB_PATH": "./data/echotune.db"
      },
      "capabilities": ["database-operations", "data-storage"],
      "category": "enhanced",
      "required": false,
      "priority": 2,
      "plannedUsage": [
        "Local data storage and caching",
        "User preferences storage",
        "Listening history caching",
        "Recommendation data storage"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3014/health",
        "timeout": 5000
      }
    },
    "spotify-integration": {
      "command": "node",
      "args": ["src/services/spotify-mcp-server.js"],
      "env": {
        "SPOTIFY_CLIENT_ID": "${SPOTIFY_CLIENT_ID}",
        "SPOTIFY_CLIENT_SECRET": "${SPOTIFY_CLIENT_SECRET}",
        "SPOTIFY_PORT": "3025"
      },
      "capabilities": ["spotify-api", "music-data", "playlist-management"],
      "category": "enhanced",
      "required": false,
      "priority": 2,
      "secretsRequired": ["SPOTIFY_CLIENT_ID", "SPOTIFY_CLIENT_SECRET"],
      "plannedUsage": [
        "Spotify API integration and management",
        "Music data retrieval and analysis",
        "Playlist creation and management",
        "User listening history access"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3025/health",
        "timeout": 5000
      }
    },
    "github-repos": {
      "command": "node",
      "args": ["mcp-servers/github-repos-manager/index.js"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_PORT": "3020"
      },
      "capabilities": ["repository-management", "issue-tracking", "pr-management"],
      "category": "community",
      "required": false,
      "priority": 5,
      "secretsRequired": ["GITHUB_TOKEN"],
      "plannedUsage": [
        "Repository operations and management",
        "Issue tracking and resolution",
        "Pull request automation",
        "Project board integration"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3020/health",
        "timeout": 5000
      }
    },
    "brave-search": {
      "command": "node",
      "args": ["mcp-servers/brave-search/brave-search-mcp.js"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}",
        "BRAVE_PORT": "3021"
      },
      "capabilities": ["web-search", "content-discovery", "research"],
      "category": "community",
      "required": false,
      "priority": 6,
      "secretsRequired": ["BRAVE_API_KEY"],
      "plannedUsage": [
        "Web search and content discovery",
        "Research assistance",
        "Documentation finding",
        "Technology trend analysis"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3021/health",
        "timeout": 5000
      }
    },
    "browserbase": {
      "command": "node",
      "args": ["mcp-servers/browserbase/browserbase-mcp.js"],
      "env": {
        "BROWSERBASE_API_KEY": "${BROWSERBASE_API_KEY}",
        "BROWSERBASE_PROJECT_ID": "${BROWSERBASE_PROJECT_ID}",
        "BROWSERBASE_PORT": "3022"
      },
      "capabilities": ["browser-automation", "web-scraping", "ui-testing"],
      "category": "community",
      "required": false,
      "priority": 6,
      "secretsRequired": ["BROWSERBASE_API_KEY", "BROWSERBASE_PROJECT_ID"],
      "plannedUsage": [
        "Browser automation for testing",
        "Web scraping and data extraction",
        "UI testing and validation",
        "Spotify web player automation"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3022/health",
        "timeout": 10000
      }
    },
    "perplexity": {
      "command": "node",
      "args": ["mcp-servers/perplexity-mcp/perplexity-mcp-server.js"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "PERPLEXITY_PORT": "3023"
      },
      "capabilities": ["ai-research", "content-analysis", "question-answering"],
      "category": "community",
      "required": false,
      "priority": 6,
      "secretsRequired": ["PERPLEXITY_API_KEY"],
      "plannedUsage": [
        "AI-powered research assistance",
        "Content analysis and summarization",
        "Technical documentation research",
        "Music industry trend analysis"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3023/health",
        "timeout": 5000
      }
    },
    "enhanced-browser-research": {
      "command": "node",
      "args": ["mcp-servers/enhanced-browser-research/enhanced-browser-research-mcp.js"],
      "env": {
        "RESEARCH_PORT": "3024"
      },
      "capabilities": ["advanced-research", "data-extraction", "web-analysis"],
      "category": "community",
      "required": false,
      "priority": 6,
      "secretsRequired": [],
      "plannedUsage": [
        "Advanced web research capabilities",
        "Structured data extraction",
        "Competitive analysis",
        "Market research automation"
      ],
      "healthCheck": {
        "endpoint": "http://localhost:3024/health",
        "timeout": 5000
      }
    }
  },
  "orchestrator": {
    "enabled": true,
    "port": 3002,
    "healthCheckInterval": 30000,
    "retryAttempts": 3,
    "retryDelay": 5000,
    "startupTimeout": 60000,
    "gracefulShutdownTimeout": 30000
  },
  "monitoring": {
    "enabled": true,
    "metricsPort": 3003,
    "alerting": {
      "enabled": true,
      "thresholds": {
        "responseTime": 5000,
        "errorRate": 0.05,
        "uptime": 0.99
      }
    },
    "logging": {
      "level": "info",
      "file": "mcp-startup.log",
      "rotation": {
        "enabled": true,
        "maxSize": "100mb",
        "maxFiles": 10
      }
    }
  }
}